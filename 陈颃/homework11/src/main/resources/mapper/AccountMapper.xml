<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.restfuldemo01.mapper.AccountMapper">
    <select id="getAccountByUsername"
            resultType="com.example.restfuldemo01.model.Account">
        select * from account where username = #{username};
    </select>
    <select id="getAccountRoleById" resultType="com.example.restfuldemo01.model.Role">
        select * from role where id in(select rid from account_role where aid = #{id});
    </select>
</mapper>
